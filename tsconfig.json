{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable",
      "esnext.array"
    ],
    "paths": {
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
