{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable",
      "esnext.array"
    ],
    "paths": {
      "@controller": ["controller"],
      "@dto": ["dto"],
      "@guard": ["guard"],
      "@migration": ["migration"],
      "@model": ["model"],
      "@pipe": ["pipe"],
      "@resolver": ["resolver"],
      "@service": ["service"],

      "@config/*": ["config/*"],
      "@controller/*": ["controller/*"],
      "@decorator/*": ["decorator/*"],
      "@dto/*": ["dto/*"],
      "@enum/*": ["enum/*"],
      "@guard/*": ["guard/*"],
      "@migration/*": ["migration/*"],
      "@model/*": ["model/*"],
      "@pipe/*": ["pipe/*"],
      "@resolver/*": ["resolver/*"],
      "@service/*": ["service/*"],
      "@util/*": ["util/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
